  page = await browser.newPage();
});

beforeEach(async () => {
  for (var i in mongoose.connection.collections) {
    await mongoose.connection.collections[i].remove({});
  }
});

const open = async (path) => {
  return await page.goto("http://localhost:3000/" + path);
}

