$white: #f8f8f8;
$black: #616163;
$gray: #A3A6AD;
$blue: #2E6C9E;
$orange: #CF5E3C;
$green: #008800;
$purple: #724CB5;

.highlight .hll { background-color: $white }
.highlight  { background: $white; color: $black }
.highlight .c { color: $gray; } /* Comment */
.highlight .err { color: #960050; background-color: #1e0010 } /* Error */
.highlight .k { color: $blue; } /* Keyword */
.highlight .l { color: #ae81ff } /* Literal */
.highlight .n { color: $black; } /* Name */
.highlight .o { color: $black; } /* Operator */
.highlight .p { color: $black; } /* Punctuation */
.highlight .cm { color: $gray; } /* Comment.Multiline */
.highlight .cp { color: $gray; } /* Comment.Preproc */
.highlight .c1 { color: $gray; } /* Comment.Single */
.highlight .cs { color: $gray; } /* Comment.Special */
.highlight .gd { color: #f92672 } /* Generic.Deleted */
.highlight .ge { font-style: italic } /* Generic.Emph */
.highlight .gi { color: #a6e22e } /* Generic.Inserted */
.highlight .gs { font-weight: bold } /* Generic.Strong */
.highlight .gu { color: #75715e } /* Generic.Subheading */
.highlight .kc { color: $orange; } /* Keyword.Constant */
.highlight .kd { color: $blue; } /* Keyword.Declaration */
.highlight .kn { color: #f92672 } /* Keyword.Namespace */
.highlight .kp { color: $orange; } /* Keyword.Pseudo */
.highlight .kr { color: $orange; } /* Keyword.Reserved */
.highlight .kt { color: $orange; } /* Keyword.Type */
.highlight .ld { color: #e6db74 } /* Literal.Date */
.highlight .m { color: #ae81ff } /* Literal.Number */
.highlight .s { color: $green; } /* Literal.String */
.highlight .na { color: $black; } /* Name.Attribute */
.highlight .nb { color: $black; } /* Name.Builtin */
.highlight .nc { color: $orange; } /* Name.Class */
.highlight .no { color: $orange; } /* Name.Constant */
.highlight .nd { color: #a6e22e } /* Name.Decorator */
.highlight .ni { color: #f8f8f2 } /* Name.Entity */
.highlight .ne { color: #a6e22e } /* Name.Exception */
.highlight .nf { color: $black; } /* Name.Function */
.highlight .nl { color: #f8f8f2 } /* Name.Label */
.highlight .nn { color: #f8f8f2 } /* Name.Namespace */
.highlight .nx { color: $black; } /* Name.Other */
.highlight .py { color: #f8f8f2 } /* Name.Property */
.highlight .nt { color: $blue; } /* Name.Tag */
.highlight .nv { color: #f8f8f2 } /* Name.Variable */
.highlight .ow { color: #f92672 } /* Operator.Word */
.highlight .w { color: #f8f8f2 } /* Text.Whitespace */
.highlight .mb { color: $purple; } /* Literal.Number.Bin */
.highlight .mf { color: $purple; } /* Literal.Number.Float */
.highlight .mh { color: $purple; } /* Literal.Number.Hex */
.highlight .mi { color: $purple; } /* Literal.Number.Integer */
.highlight .mo { color: $purple; } /* Literal.Number.Oct */
.highlight .sb { color: $green; } /* Literal.String.Backtick */
.highlight .sc { color: $green; } /* Literal.String.Char */
.highlight .sd { color: $green; } /* Literal.String.Doc */
.highlight .s2 { color: $green; } /* Literal.String.Double */
.highlight .se { color: $green; } /* Literal.String.Escape */
.highlight .sh { color: $green; } /* Literal.String.Heredoc */
.highlight .si { color: $green; } /* Literal.String.Interpol */
.highlight .sx { color: $green; } /* Literal.String.Other */
.highlight .sr { color: $green; } /* Literal.String.Regex */
.highlight .s1 { color: $green; } /* Literal.String.Single */
.highlight .ss { color: $blue; } /* Literal.String.Symbol */
.highlight .bp { color: #f8f8f2 } /* Name.Builtin.Pseudo */
.highlight .vc { color: #f8f8f2 } /* Name.Variable.Class */
.highlight .vg { color: #f8f8f2 } /* Name.Variable.Global */
.highlight .vi { color: #f8f8f2 } /* Name.Variable.Instance */
.highlight .il { color: #ae81ff } /* Literal.Number.Integer.Long */

.highlight {
  border-radius: 0;
  pre {
    background: inherit;
    color: inherit;
    border: none;
  }
}
