function showSchemeOptions(elem) {
  showFullTimeOptions(elem);
  showPartTimeOptions(elem);
};

function schemeOptionsReset() {
  document.getElementById('format').value = "";
  document.getElementById('payment-method-fulltime').value = "";
  document.getElementById('fulltime-scheme').style.display = "none";
  document.getElementById("stipendCheckBox").checked = false
  document.getElementById('payment-method-partime').value = "";
  document.getElementById('partime-scheme').style.display = "none";
  document.getElementById('stipend').style.display = "none";
  document.getElementById('can-work').style.display = "none";
}

function showPartTimeOptions(elem) {
  if (elem.value === "format-partial") {
    document.getElementById('payment-method-partime').value = "";
    document.getElementById('payment-method-fulltime').value = "";
    document.getElementById('stipend').style.display = "none";
    document.getElementById('can-work').style.display = "none";
    document.getElementById("stipendCheckBox").checked = false;
    document.getElementById('partime-scheme').style.display = "block";
  } else {
    document.getElementById('partime-scheme').style.display = "none";
  }
};

function showFullTimeOptions(elem) {
  if (elem.value === "format-full") {
    document.getElementById('payment-method-fulltime').value = "";
    document.getElementById('payment-method-partime').value = "";
    document.getElementById('stipend').style.display = "none";
    document.getElementById('fulltime-scheme').style.display = "block";
    document.getElementById("stipendCheckBox").checked = false;
  } else {
    document.getElementById('fulltime-scheme').style.display = "none";
  }
};

function showCanWorkFullTime(elem) {
  if(elem.value === "scheme-1") {
    document.getElementById('can-work').style.display = "block";
    document.getElementById('stipend').style.display = "block";
  } else if (elem.value === "scheme-2") {
    document.getElementById('can-work').style.display = "block";
    document.getElementById('stipend').style.display = "none";
    document.getElementById("stipendCheckBox").checked = false
   } else {
    document.getElementById('can-work').style.display = "none";
    document.getElementById('stipend').style.display = "none";
    document.getElementById("stipendCheckBox").checked = false
  }
}

function showCanWorkPartTime(elem) {
  if(elem.value === "scheme-1") {
    document.getElementById('can-work').style.display = "block";
  } else {
    document.getElementById('can-work').style.display = "none";
  }
}