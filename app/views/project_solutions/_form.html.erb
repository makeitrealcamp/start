<%= form_for @project_solution, url: project_solution_form_url, method: project_solution_form_method do |f| %>
  <%= render 'shared/flash_messages_form', object: @project_solution %>

  <div class="form-group git-repo">
    <p>Ingresa la ruta al repositorio de Github con tu solución:</p>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">https://github.com/</span>
      <%= f.text_field :repository, class: "form-control", placeholder: "usuario/repositorio" %>
    </div>
  </div>

  <div class="form-group git-repo">
    <p>Si publicaste tu proyecto en algún sitio, comparte la url con la comunidad:</p>
    <div class="input-group btn-block">
      <%= f.text_field :url, class: "form-control", placeholder: "http://makeitreal.camp" %>
    </div>
  </div>
  <div class="form-group summary">
    <p>Cuéntanos un poco sobre la solución que implementaste:</p>
    <%= f.text_area :summary, class: "form-control", placeholder: "..." %>
  </div>

  <div>
    <div class="pull-right">
      <%= f.submit "Publicar", class: "btn btn-primary" %>
    </div>
    <% if  current_user.is_admin? || !@project_solution.new_record? %>
      <%= link_to subject_project_project_solutions_path(@project.subject, @project), class: "btn btn-secondary" do %>
        <span class='glyphicon glyphicon-blackboard'></span> Ver otras soluciones
      <% end %>
    <% end %>
  </div>

<% end %>
