<%= form_for @pair_programming_time, remote: true do |f| %>
  <%= render 'shared/flash_messages_form', object: @pair_programming_time %>
  <div class="form-group">
    <%= f.label "Día" %>
    <%= f.select :day, days_for_select, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "¿Desde qué horas estás disponible?" %>
    <div class="row">
      <div class="col-xs-6">
        <%= f.select :start_time_hour, hours_for_select,{selected: @pair_programming_time.start_time_hour || 18},class: 'form-control' %>
      </div>
      <div class="col-xs-6">
        <%= f.select :start_time_minute, minutes_for_select,{},class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "¿Cuánto tiempo estarás disponible?" %>
    <%= f.select :duration_in_minutes, durations_for_select,{selected: @pair_programming_time.duration_in_minutes || 120},class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Zona horaria" %>
    <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.all.sort, {default: "Bogota"}, class: 'form-control') %>
  </div>

  <%= f.submit "Guardar", class: "btn btn-primary btn-block" %>

<% end %>
