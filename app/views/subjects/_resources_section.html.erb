<% if current_user.is_admin? %>
  <div class="row">
    <div class="col-sm-12 text-center new-resource-btn">
      <%= link_to '<span class="glyphicon glyphicon-plus"></span> Nuevo Recurso'.html_safe, new_subject_resource_path(@subject), class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<div class="row resources-list">
  <div class="col-sm-10 col-sm-offset-1">
    <p class="tab-exp text-center">Todo el conocimiento está en Internet. Es por eso que hemos seleccionado los mejores recursos para tu aprendizaje.</p>
    <table class="table resources">
      <% @subject.resources.published.rank(:row).each do |resource| %>
        <%= render partial: 'resource_item', locals: { resource: resource } %>
      <% end %>
    </table>
  </div>
</div>

<script type="text/javascript">
console.log("entró");
  new Sortable('.resources', { items: " .resource", handle: ".resource-move"});
</script>
