<div class="container course-form-page">
  <div class="row">
    <%= form_for @user do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @user %>
        <h1>Editar Perfil</h1>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :email, "Correo Electronico" %>
              <%= f.text_field :email, class: 'form-control input-lg', placeholder: 'email', disabled: true %>
            </div>
            <div class="form-group">
              <%= f.label :first_name, "Nombre" %>
              <%= f.text_field :first_name, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :last_name, "Apellido" %>
              <%= f.text_field :last_name, class: "form-control input-lg" %>
            </div>
            <div class="form-group">
              <%= f.label :birthday %>
              <%= f.text_field :birthday, data: { datetimepicker: true }, class: "form-control input-lg",
                placeholder: "DD/MM/AAAA",
                value: @user.birthday.blank? ? '' : @user.birthday.strftime('%d-%m-%Y') %>
            </div>
            <div class="form-group">
              <%= f.label :mobile_number, "Celular"%>
              <%= f.text_field :mobile_number, data: { intlTelInput: true }, class: 'form-control input-lg', placeholder: '' %>
              <span>(p.e. + 57 3002111111)</span>
            </div>

          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label :github_username, "Usuario de Github" %>
              <div class="input-group input-group-lg">
                <span class="input-group-addon" >github.com/</span>
                <%= f.text_field :github_username, class: 'form-control'%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :nickname %>
              <div class="input-group input-group-lg">
                <span class="input-group-addon" >makeitreal.camp/u/</span>
                <%= f.text_field :nickname, class: 'form-control'%>
              </div>
            </div>

            <div class="form-group">
              <span class="radio-caption">Visibilidad del perfil:</span>
              <label class="radio-inline">
                <%= f.radio_button(:has_public_profile, true) %>
                <%= f.label(:true, "PÃºblico", class: "txt-bold") %>
              </label>
              <label class="radio-inline">
                <%= f.radio_button(:has_public_profile, false) %>
                <%= f.label(:false, "Privado", class: "txt-bold") %>
              </label>
            </div>

          </div>


        </div>

        <div class="row">
          <div class="col-md-6 col-md-offset-6">
            <div class="actions text-right">
              <%= link_to "Cancelar", signed_in_root_path, class: "btn btn-default" %>
              <%= f.submit("Actualizar Perfil", class: "btn btn-primary") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
