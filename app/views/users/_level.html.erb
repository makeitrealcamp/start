<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-2">
    <div class="level-image-container">
      <%= image_tag @user.level.image_url, class: "img-responsive" %>
    </div>
  </div>

  <div class="col-xs-8 col-sm-8 col-md-8">
    <% if @user.next_level %>
      <p class="points"><%= @user.stats.total_points %>/<%= @user.next_level.required_points %></p>
    <% else %>
      <p class="points"><%= @user.stats.total_points %>/<%= @user.stats.total_points %></p>
    <% end %>
      <%= progress_bar(progress: @user.stats.level_progress, color: "red", opacity: 1) %>
  </div>

  <% if @user.next_level %>
    <div class="col-xs-2 col-sm-2 col-md-2">
      <div class="level-image-container">
        <%= image_tag @user.next_level.image_url, class: "img-responsive" %>
      </div>
    </div>
  <% end %>
</div>
