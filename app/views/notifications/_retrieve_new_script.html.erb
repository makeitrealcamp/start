<script>
  (function() {
    Dispatcher.on("notifications:new", function(data) {
      var url = '<%= notification_path("XXX") %>';
      url = url.replace("XXX",data.notification_id);
      $.getScript(url);
    });
    $(document).on("turbolinks:click", function() {
      Dispatcher.off("notifications:new");
    });
  })();
</script>
<% if User::NOTIFICATION_SERVICE == Pusher %>
  <%= render "notifications/pusher_script" %>
<% end %>
