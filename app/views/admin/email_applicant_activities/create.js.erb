<% if @activity.valid? %>
  $('#send-email-modal').modal('hide');
  $('.activities').prepend('<%= j render "admin/top_applicants/activity", activity: @activity %>');
<% else %>
  <% if @activity.errors[:subject].any? %>
    invalidField('.email-subject', '<%= @activity.errors[:subject].first %>');
  <% else %>
    clearField('.email-subject');
  <% end %>
  <% if @activity.errors[:body].any? %>
    invalidField('.email-body', '<%= @activity.errors[:body].first %>');
  <% else %>
    clearField('.email-body');
  <% end %>
<% end %>