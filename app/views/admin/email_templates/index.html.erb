<div class="index-email-template">
  <div class="container">
  	<div class="row" >
  		<div class="col-sm-12">
  			<div class="email-templates-header">
  				<h1>Plantillas para envíar correos</h1>
  			  <button type="button" class="btn-new-email-template btn btn-primary" data-toggle="modal" data-target="   #send_email">
  			   <span class='new-template-glyphicon glyphicon glyphicon-plus'></span>     Nueva plantilla
  			 </button>
  		  </div>
  			<%= render "email_templates"%>
  		</div>
  		<hr style="color:black">
  		</div>
  		<div class="row">
  			<div class="col-sm-12">
  				<table class="email-table table users" id="table-users">
  					<thead>
  						<tr>
  							<th>Título</th>
  							<th>Asunto</th>
  							<th class="text-center">Mensaje</th>
  							<th class="text-center">Ir a la plantilla</th>
                <th class="text-center">Borrar</th>
  						</tr>
  					</thead>
  					<tbody class="body-email-template">
  						<%@templates.each do |template|%>
  						<tr>
  							<td class="title-email"><%=template.title%></td>
  							<td class="message-email"><%=template.subject%></td>
  							<td class="text-center body-email"><%=template.body[0..25]%></td>
  							<td class="text-center"><a href="/admin/email_templates/<%=template.id%>"><span class='glyphicon glyphicon-hand-right'></span></a></td>
                <td class="text-center"> <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, admin_email_template_path(template.id), method: :delete  %> </td>
  						</tr>
  						<%end%>
  					</tbody>
  				</table>
  			</div>
  		</div>
  </div>
</div>