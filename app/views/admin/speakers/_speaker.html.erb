<div class="col-sm-6">
  <div class="speaker" id="speaker-<%= speaker.id %>">
    <div class="speaker-img">
      <% if speaker.avatar.attached? %>
        <%= image_tag speaker.avatar.variant(resize: "160x160") %>
      <% else %>
        <img src="<%= speaker.avatar_url %>" alt="<%= speaker.name %>">
      <% end %>
    </div>
    <div class="speaker-name">
      <%= speaker.name %>
      <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, admin_webinar_speaker_path(speaker.webinar, speaker), remote: true, method: :delete, data: { confirm: "¿Estás seguro de eliminar este speaker?" } %>
    </div>
    <div class="speaker-bio"><%= speaker.bio %></div>
  </div>
</div>
