<div class="container project-form-page">
  <div class="row">
    <%= form_for [:admin, @project.subject, @project]  do |f| %>
      <div class="col-sm-10 col-sm-offset-1">
        <%= render 'shared/flash_messages_form', object: @project  %>

        <h1><%= @project.new_record? ? "Nuevo Proyecto" : "Editar Proyecto - #{@project.name}" %></h1>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :explanation_text %>
          <%= f.text_area :explanation_text, rows: 10, class: "form-control" %>
        </div>

        <div class="form-group resource-type-form url-field type-url-form">
          <%= f.label :explanation_video_url %>
          <%= f.text_field :explanation_video_url, class: "form-control" %>
          <p class="help-block">Debe poner el video embebido ej. http://fast.wistia.net/embed/iframe/es7g1ii56j</p>
        </div>

        <div class="form-group">
          <%= f.label :difficulty_bonus %>
          <%= f.select :difficulty_bonus, [0,100, 200, 300, 400, 500], {}, class: 'form-control', placeholder: 'Bono de Dificultad' %>
        </div>

        <div class="form-group">
          <%= f.check_box :published %>
          <%= f.label :published %>
        </div>

        <div class="actions text-right">
          <%= link_to "Cancelar", subject_path(@project.subject, anchor: "projects"), class: "btn btn-default", anchor: "projects" %>
          <%= f.submit class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
