<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :slug, "Path" %>
  <div class="input-group">
    <span class="input-group-addon">/</span>
    <%= f.text_field :slug, class: "form-control" %>
  </div>
  <small class="form-text text-muted"><input type="checkbox" id="auto-slug">
    <label for="auto-slug">Generate automatically</label>
  </small>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.label :date %>
      <%= f.text_field :date, data: { datetimepicker: true }, class: "form-control", placeholder: "DD/MM/AAAA", value: @webinar.date.blank? ? '' : @webinar.date.strftime('%d-%m-%Y') %>
    </div>
  </div>
  <div class="col-sm-6">
    <label for="time">Time</label>
    <select id="time" class="form-control" name="time">
      <%= webinar_hours_options(@webinar.date.in_time_zone(-5)) %>
    </select>
  </div>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :image, "Image" %>
  <%= f.file_field :image %>
</div>

<div class="form-group">
  <%= f.label :event_url, "YouTube ID" %>
  <%= f.text_field :event_url, class: "form-control" %>
</div>

<div class="actions text-right" style="margin-top: 40px;">
  <%= link_to "Cancel", admin_webinars_path, class: "btn btn-default" %>
  <%= f.submit class: "btn btn-primary" %>
</div>
