<div class="response-comment-form">
  <%= form_tag generate_comments_path(@comment.commentable), remote: true, class: "edit-comment" do %>
    <span class="label label-danger" style="display:none">Este campo es requerido.</span>
    <%= text_area_tag :text, nil, class: "form-control", rows: 3, required: true, placeholder: "Escribe una respuesta"  %>
    <%= hidden_field_tag :response_to_id, @comment.id %>
    <div class="text-right actions" style="margin-top: 10px;">
      <a href="#" class="btn btn-default btn-cancel-response">Cancelar</a>
      <%= submit_tag "Responder", class: "btn btn-success", id: "btn-update" %>
    </div>
  <% end  %>
</div>
