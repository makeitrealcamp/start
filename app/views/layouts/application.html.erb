<!DOCTYPE html>
<html class="expand">
<head>
  <title>Make it Real - Start</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700|Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <% if Rails.env.production? %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= ENV["GOOGLE_TRACKING_ID"] %>', 'auto');
    ga('send', 'pageview');
  </script>
  <% end %>

  <%= yield :head %>
</head>
<body class="expand">
  <%= render "layouts/navigation" %>
  <div class="content-wrapper expand">
  <% flash.each do |name, msg| -%>
    <div class="alert-top alert-top-<%= name %> fade in">
      <%= msg.html_safe %>
    </div>
  <% end -%>

  <%= yield %>
  </div>

  <div class="overlay"></div>

  <% if @first_activity %>
    <script>
      ga('send', 'event', { eventCategory: 'signup', eventAction: 'start' });
    </script>
  <% end %>
</body>
</html>
